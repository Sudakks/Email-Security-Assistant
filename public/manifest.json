{
  //一直搞错了，它读取的是public里面的manifest.json!!!!
  "name": "Email Security Assistant",
  "manifest_version": 3,
  "version": "1.0.0",
  "icons": {
    "32": "icon.png"
  },

  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    //"http://*/*",
    //"https://*/*",
    "<all_urls>",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "openpgp.min.mjs" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "contentScript.js" ],
      "type": "module"
    }
  ]
}