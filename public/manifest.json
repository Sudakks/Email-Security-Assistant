{
  //一直搞错了，它读取的是public里面的manifest.json!!!!
  "name": "Email Security Assistant",
  "manifest_version": 3,
  "version": "1.0.0",
  "icons": {
    "32": "icon.png"
  },

  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    //"http://*/*",
    //"https://*/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "contentScript.js" ]
    }
  ]
}